<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>iVAP | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/css/Menustyle.css" rel="stylesheet" />
    @Styles.Render("~/Content/css/CommanCssBundle")
    <link href="~/Content/css/slick-theme.css" rel="stylesheet" />
    @*<link href="~/Content/css/progress-tracker.css" rel="stylesheet" />*@

    <!-- Bootstrap JavaScript -->
</head>
<body>
    <div class="WebsiteMaxWidth">

        <div class="clear"></div>
        <header>
            <div class="HeaderTop">
                <div class="">
                    <div class="pcoded-container navbar-wrapper">
                        <nav class="navbar header-navbar pcoded-header mg-0">
                            <div class="navbar-wrapper">
                                <div class="navbar-logo">
                                    <a class="mobile-menu" id="mobile-collapse" href="#!">
                                        <i class="fa fa-bars"> </i>
                                    </a>
                                    <a class="mobile-options waves-effect waves-light">
                                        <i class="feather icon-more-horizontal"></i>
                                    </a>
                                </div>
                                <div class="HeaderTopIdeaLogo">
                                    <img src="~/Content/images/iVap_logo.png" alt="" />
                                </div>
                                <div class="AdityaBirlaLogo">
                                    <div class="var-list">
                                        <ul class="nav pull-right">
                                            <li>
                                                <div class="dropdown">
                                                    <button class="btn btn-default dropdown-toggle login-link" type="button">
                                                        <img src="~/Content/images/usrprofile.png" style="width:16px; height:16px">
                                                        <span style="color:white;">
                                                            Welcome <br>
                                                            <strong>
                                                                @{
                                                                    var ObjU = (Ivap.Models.AppUser)Session["uBo"];
                                                                    string UserFrltr = ((Ivap.Models.AppUser)Session["uBo"]).FirstName;
                                                                }
                                                                @UserFrltr
                                                            </strong>
                                                        </span>
                                                        <span class="caret arow"></span>
                                                    </button>
                                                    <ul class="dropdown-menu menu-icons">
                                                        <li><a href="Profile.aspx"> <span class="glyphicon glyphicon-user pull-left"></span> <span class="fieldtxt">Profile</span> </a></li>
                                                        <li><a href="ChangePwd.aspx"> <span class="glyphicon glyphicon-lock pull-left"></span> <span class="fieldtxt">Change Password</span> </a></li>
                                                        <li><a href="Login.aspx"> <span class="glyphicon glyphicon-log-out pull-left"></span> <span class="fieldtxt">Signout</span> </a></li>
                                                    </ul>
                                                </div>
                                            </li>

                                            <li>
                                                <div class="dropdown">
                                                    <button class="btn btn-default dropdown-toggle login-link" type="button">
                                                        <img src="~/Content/images/usrprofile.png" style="width:16px; height:16px"> <span style="color:white;">
                                                            Your Role
                                                            <br> <strong>Role</strong>
                                                        </span>
                                                        <span class="caret arrow"></span>
                                                    </button>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                    @*<img src="~/Content/images/iVap_logo.png" alt="" />*@
                                </div>
                                <div class="HeaderNotificationsIconMain">
                                    <a href="#">
                                        <img src="~/Content/images/Notification_Active.png" />
                                    </a>

                                </div>

                                <div class="AdityaBirlaLogo">
                                    <div class="var-list">
                                        <ul class="nav pull-right">
                                            <li>
                                                <div class="dropdown">
                                                    <button class="btn btn-default dropdown-toggle login-link" type="button">
                                                        <img src="~/Content/images/indiaflag24.png" style="width:24px; height:24px">
                                                        <span style="color:white;">
                                                            Language <br>
                                                            <strong>English</strong>
                                                        </span>
                                                        <span class="caret arow"></span>
                                                    </button>
                                                    <ul class="dropdown-menu menu-icons">
                                                        <li><a href="Profile.aspx"> <span class="glyphicon glyphicon-user pull-left"></span> <span class="fieldtxt">Profile</span> </a></li>
                                                        <li><a href="ChangePwd.aspx"> <span class="glyphicon glyphicon-lock pull-left"></span> <span class="fieldtxt">Change Password</span> </a></li>
                                                        <li><a href="Login.aspx"> <span class="glyphicon glyphicon-log-out pull-left"></span> <span class="fieldtxt">Signout</span> </a></li>
                                                    </ul>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <div id="pcoded" class="pcoded">
            @*<div id="pcoded" class="pcoded pcoded-main-container">*@
                <div class="pcoded-wrapper">
                    <nav class="pcoded-navbar">
                        <div class="nav-list">
                            <div class="pcoded-inner-navbar main-menu">
                                <div class="leftMenuProfileMain pcoded-navigation-label pd-0 mg-top4">
                                    <div class="leftMenuProfileMainIcon">
                                        @{
                                            string ProfilePic = ((Ivap.Models.AppUser)Session["uBo"]).ProfilePic;
                                            if (ProfilePic == "")
                                            {
                                                <img src="~/Content/images/ProfileImg.png" />
                                            }
                                            else
                                            {
                                                <img src="data:image/png;base64,@ProfilePic" height="40px" width="40px" />
                                            }

                                        }
                                    </div>
                                    <div class="leftMenuProfileMainText mg-top7">
                                        <h3>
                                            <strong>
                                                @{
                                                    string UserName = ((Ivap.Models.AppUser)Session["uBo"]).FirstName;
                                                    string RoleName = ((Ivap.Models.AppUser)Session["uBo"]).RoleName;

                                                }
                                                <a href="/MyProfile">@UserName</a>
                                            </strong>
                                        </h3>
                                        <p><small>@RoleName</small></p>
                                        @*<h3><strong>Vivek Bajaj</strong></h3>
                                    <p><small>Senior Manager | Admin</small></p>*@
                                    </div>
                                    @*<div class="clear5"></div>*@
                                </div>

                                <div class="clear"></div>
                                @{Html.RenderAction("RenderMenu", "Authorization", new { area = string.Empty });}
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="pcoded-content">
                    <div class="main-body">
                        <div class="page-wrapper">
                            <div class="container pd-0">
                                <div class="ContentRightMain mg-0">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="Footer">
                <p>© @System.DateTime.Now.Year Mynd Solution Pvt.Ltd.</p>
            </div>
        </div>
</body>
</html>
@RenderSection("scripts", required: false)
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
<script src="~/Scripts/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/Scripts/menu/pcoded.min.js"></script>
<script src="~/Scripts/menu/vertical-layout.min.js"></script>
<script>
    $(document).ready(function () {
        //$(".TextBoxMainMain input").val("");
        $("#mobile-collapse").click();
        $(".TextBoxMainMain input").focusout(function () {
            if ($(this).val() != "") {
                $(this).addClass("has-content");
            } else {
                $(this).removeClass("has-content");
            }
        });
    });

</script>




@{
    ViewBag.Title = "PasswordExpiredAlert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int PassChangeDays = ((Ivap.Models.AppUser)Session["uBo"]).PassChangeDays;
    string Days = " in " + PassChangeDays + " Days";
    if (PassChangeDays == 0)
    {
        Days = " today ";
    }
    else if (PassChangeDays == 1)
    {
        Days = " tomorrow ";
    }
}
<div class="panel panel-default win-bg">
    <div class="panel-body">
        <div class="row">
            <div class="clear50"></div>
            <div class="col-md-9 col-md-offset-3">
                <div class="clear50"></div>
                <div class="Topheading">Dear User,</div>
                <div class="leftMapProfileText">
                    <h3>Your Password will expire @Days.</h3>
                    <div class="clear10"></div>
                    <h3> Please change your password before it expires. </h3>
                </div>
                <div class="clear40"></div>
                <button type="button" class="btn btn-primary BtnWhiteLg" id="btnRemind">Remind Me Later</button>
                <button type="button" class="btn btn-primary BtnBlueLg BtnWidth150" id="btnChange">Change Now</button>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
@section scripts {
@Scripts.Render("~/Scripts/commanscript")
<script type="text/javascript">
    $("#btnRemind").click(function () {
        var URL = '@Url.RouteUrl("login")';

            window.location = URL;
    });

    $("#btnChange").click(function () {
        var URL = '@Url.RouteUrl("ChangePasswordView")';
        window.location = URL;
    });

</script>
}




@model  Ivap.ViewModel.LoginVM
@{
    Layout = null;

}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Log in</title>
    @Styles.Render("~/Content/css/LoginCss")
    <!-- Bootstrap -->
    @*<link href="~/Content/css_Idea/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/css_Idea/CustomStyle.css" rel="stylesheet" />
        <link href="~/Content/css_Idea/TextBoxEffect.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="WebsiteMaxWidth">
        <header>
            <div class="container-fluid">
                <div class="HeaderTopIdeaLogo m-t-10">
                    <img src="~/Content/images/mynd-logo.png" class="img-responsive" alt="" />
                </div>
                <nav class="right-nav">
                    <ul>
                        <li class="topcontent">
                            <h4>Welcome To Mynd Central</h4>
                            <div>All your HR need under one roof</div>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
        <div class="ContentRightMain">
            <div class="panel-default">
                <div class="panel-body pd-0">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="container LoginPageInner">
                                <div class="row">
                                    <form action="/login" id="UserLoginForm" method="post" accept-charset="utf-8" autocomplete="off">
                                        @Html.AntiForgeryToken()
                                        <div class="form-horizontal col-md-4 col-md-push-1 LoginInnerHeader">
                                            <h4>Employee Login</h4>
                                            <hr>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label LoginLabel">Entity</label>
                                                <div class="col-sm-9 controls">
                                                    <span>
                                                        @Html.TextBoxFor(model => model.EntityCode, new { @autocomplete = "off" })
                                                        @*<input name="" type="text" maxlength="13" class="" style="width:100%;">*@
                                                    </span>
                                                    @Html.ValidationMessageFor(model => model.EntityCode)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label LoginLabel">User&nbsp;ID</label>
                                                <div class="col-sm-9 controls">
                                                    <span>
                                                        @Html.TextBoxFor(model => model.UserName, new { @autocomplete = "off" })
                                                        @*<input name="" type="text" maxlength="13" class="" style="width:100%;">*@
                                                    </span>
                                                    @Html.ValidationMessageFor(model => model.UserName)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label LoginLabel">Password</label>
                                                <div class="col-sm-9 controls">
                                                    <span>
                                                        @Html.PasswordFor(model => model.Password, new
                                                           {
                                                               @name = "password",
                                                               @autocomplete = "off",
                                                               @placeholder = ""
                                                           })
                                                    </span>
                                                    @Html.ValidationMessageFor(model => model.Password)
                                                </div>
                                            </div>
                                            <div class="srybtn">
                                                <p>@Html.ValidationSummary(true)</p>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="pull-right">
                                                        <input type="submit" value="Submit" class="btn btn-primary" style="background-color:#563f9a!important;" />
                                                        @*<button type="button" class="btn btn-primary" style="background-color:#563f9a!important;">Submit</button>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="row">
                                    <div class="form-horizontal col-md-4 col-md-push-1 LoginInnerFooter">
                                        <div class="form-group">
                                            <label class="col-sm-12 LoginLabel"> <i class="fa fa-user"></i> <a href='@Url.RouteUrl("ForgotPasswordView")'>Forgot&nbsp;Password</a></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="item active">
                                <img src="~/Content/images/slide1.jpg" alt="slide1" style="width:100%;">
                                <div class="carousel-container">
                                    <div class="carousel-content">
                                        <h2>Input Validation Aggregator Product</h2>
                                    </div>
                                </div>
                            </div>

                            <div class="item">
                                <img src="~/Content/images/slide2.jpg" alt="slide2" style="width:100%;">
                                <div class="carousel-container">
                                    <div class="carousel-content">
                                        <h2>Active Compliance Tracking</h2>
                                    </div>
                                </div>
                            </div>

                            <div class="item">
                                <img src="~/Content/images/slide3.jpg" alt="slide3" style="width:100%;">
                                <div class="carousel-container">
                                    <div class="carousel-content">
                                        <h2>Customer Interaction Management</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="Footer mg-0">
            <p>© 2019 Mynd Integrated Solution Pvt.Ltd.</p>
        </div>
    </div>
</body>

</html>
@*<script src="~/Scripts/html5shiv.min.js"></script>*@
@Scripts.Render("~/Scripts/LoginScript")
<script src="~/Scripts/html5shiv.min.js"></script>
<script>
    $(document).ready(function () {
        $('.dropdown-menu li a').click(function (event) {
            var option = $(event.target).text();
            $(event.target).parents('.btn-group').find('.dropdown-toggle').html(option + ' <span class="caret caretBlue"></span>');
        });
    });

    // Link to open the dialog
    $("#load").click(function (event) {
        $("#dvForgetPassdtl").show();
        $("#dvForgetPassMsg").hide();
        $("#txtUserName").val("");
        $("#pmsg").html("");
        $("#dvForgetPass").dialog({
            autoOpen: false,
            width: 450,
            title: "Forget Password",
            closeText: "",
        });
        $("#dvForgetPass").dialog("open");
        event.preventDefault();
    });

    $("#btnForgotPass").click(function () {
        var UserName = $("#txtUserName").val();
        if (UserName.trim() == "") {
            alert("Please enter your user name");
            return false;
        }

        $.ajax({
            type: "GET",
            url: "@Url.RouteUrl("ForgetPassword")",
            contentType: "application/json; charset=utf-8",
            data: { UserName: UserName },
            success: function (response) {

                $("#pmsg").html(response.Message);
                $("#dvForgetPassdtl").hide();
                $("#dvForgetPassMsg").show();
            }

        });
    });
</script>

<script>
    $(document).ready(function () {
            $(".TextBoxMainMain input").val("");
            $(".TextBoxMainMain input").on("blur", function () {
                if ($(this).val() != "") {
                    $(this).addClass("has-content");
                } else {
                    $(this).removeClass("has-content");
                }
            });
        });
</script>

    Layout = null;
}
<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Generate Password</title>
    @Styles.Render("~/Content/css/LoginCss")
    @*<script src='https://www.google.com/recaptcha/api.js'></script>*@
    <!-- Bootstrap -->
    @*<link href="~/Content/css_Idea/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/css_Idea/CustomStyle.css" rel="stylesheet" />
        <link href="~/Content/css_Idea/TextBoxEffect.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="LoginPageYellowBg">
        <div class="LoginPageLeft">
            <h1>Welcome to IVAP</h1>
            <div class="clear0"></div>
            <p>
              
            </p>

            <div class="clear20"></div>
            <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">

                        <div class="delivery_truck_login">
                            <img src="images/loginPageIcon1.png" alt="" />
                        </div>
                        <div class="clear30"></div>
                        <h2> Input Submission </h2>

                    </div>

                    <div class="item">

                        <div class="delivery_truck_login">
                            <img src="images/loginPageIcon2.png" alt="" />
                        </div>
                        <div class="clear30"></div>
                        <h2> Input Validation </h2>

                    </div>

                    <div class="item">

                        <div class="delivery_truck_login">
                            <img src="images/loginPageIcon3.png" alt="" />
                        </div>
                        <div class="clear30"></div>
                        <h2> Reconciliation </h2>

                    </div>

                </div>


            </div>



            <div class="clear"></div>
        </div>
        @using (Ajax.BeginForm("UpdateExpiredPassword", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", }))
        {
            @Html.AntiForgeryToken()
            <div class="LoginPageRight">
                <div class="LoginIdeaLogo">
                    <img src="~/Content/images/iVap_loginlogo.png" />
                </div>
                <div class="LoginAdityaBirlaLogo">
                </div>
                <div class="clear20"></div>
                <h1>Generate Password</h1>
                <div class="clear10"></div>
                <p>As per company norms after 60 days, you need a password reset.</p>
                <div class="clear"></div>
                <div id="dvmain">
                    <div class="LoginFormMain">
                        <div class="clear"></div>
                        <div class="TextBoxMainMain">
                            <span id="spnMgs" style="color:red;"></span>
                        </div>
                        <div class="clear"></div>
                        <div class="TextBoxMainMain">
                            @Html.TextBoxFor(x => x.UserID, new { @autocomplete = "off", @class = " question UserName effect-16", @placeholder = "" })
                            <label>User ID</label>
                            @Html.ValidationMessageFor(x => x.UserID)
                        </div>
                        <div class="clear10"></div>
                        <div class="TextBoxMainMain">
                            @Html.PasswordFor(x => x.CurrentPassword, new { @autocomplete = "off", @class = " question UserName effect-16", @placeholder = "" })
                            <label>Your Current Password</label>
                            @Html.ValidationMessageFor(x => x.CurrentPassword)
                        </div>
                        <div class="clear10"></div>
                        <div class="TextBoxMainMain">
                            @Html.PasswordFor(x => x.NewPassword, new { @autocomplete = "off", @class = " question UserName effect-16", @placeholder = "" })
                            <label>New Password</label>
                            @Html.ValidationMessageFor(x => x.NewPassword)
                        </div>
                        <div class="clear10"></div>
                        <div class="TextBoxMainMain">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @autocomplete = "off", @class = " question UserName effect-16", @placeholder = "" })
                            <label>Retype Password</label>
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                        @*<div class="clear10"></div>
                        <div class="TextBoxMainMain">
                            <label for="inputEmail3" class="col-sm-4 control-label"> </label>
                            <div>
                                <div class="g-recaptcha" data-sitekey="6LchbEIUAAAAAHRQssAQlW80LpvM3_PgLgfz84jy"></div>
                            </div>
                        </div>*@
                        @*<a class="LoginForgotPassword" href='@Url.RouteUrl("ForgotPasswordView")'>Forgot Password ?</a>*@
                    </div>
                    <div class="clear"></div>
                    <button type="submit" class="btn btn-primary SignInBtn">Submit</button>
                </div>
                <div id="dvSuccessfull" style="display:none; height:200px; vertical-align:central; text-align:center; padding-top:30px;">
                    <label> Congratulations ! Your password reset Successfully . Please <a href="@Url.RouteUrl("loginview")"> Click Here</a> to Login</label>
                </div>
                <div class="clear"></div>
                <img class="LoginPageRightCurveImg" src="~/Content/images/LoginPageRightCurveImg.png" alt="" />
            </div>
        }
        <div class="clear"></div>
    </div>
</body>
</html>
@Scripts.Render("~/Scripts/LoginScript")
<script type="text/javascript">
    $(document).ready(function () {
        var PLink = '@ViewBag.passLink';
        //$("#PassLinkKey").val(PLink);
        //alert($("#PassLinkKey").val());
        $('.dropdown-menu li a').click(function (event) {
            var option = $(event.target).text();
            $(event.target).parents('.btn-group').find('.dropdown-toggle').html(option + ' <span class="caret caretBlue"></span>');
        });
        $(".TextBoxMainMain input").val("");
        $(".TextBoxMainMain input").focusout(function () {
            if ($(this).val() != "") {
                $(this).addClass("has-content");
            } else {
                $(this).removeClass("has-content");
            }
        });
    });
    function OnSuccess(e) {
        if (e.IsSuccess == true) {
            $("#dvmain").hide();
            $("#spnMgs").html("");
            $("#dvSuccessfull").show();
        }
        else {
            $("#spnMgs").html(e.Message);
        }
    }

</script>